<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_menu">

    <fragment
        android:id="@+id/navigation_menu"
        android:name="com.example.pizzasad.ui.menu.MenuFragment"
        android:label="Меню"
        tools:layout="@layout/fragment_menu" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.pizzasad.ui.profile.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/navigation_contact"
        android:name="com.example.pizzasad.ui.contact.ContactFragment"
        android:label="Контакты"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.pizzasad.ui.cart.CartFragment"
        android:label="Корзина"
        tools:layout="@layout/fragment_cart" />
</navigation>